<Window x:Class="MainApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel x:Name="MainStack">
            <TextBox x:Name="FName" Height="23" TextWrapping="Wrap" Text="{Binding Path=FirstName}"/>
            <TextBox x:Name="LName" Height="23" TextWrapping="Wrap" Text="{Binding Path=LastName}"/>
            <TextBox x:Name="Age" Height="23" TextWrapping="Wrap" Text="{Binding Path=Age}"/>
        </StackPanel>
        <Button Content="Start Server" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="55,133,0,0" Click="Button_Click"/>
        <Button Content="Connect To Server" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="148,133,0,0" Click="Button_Click_1"/>

    </Grid>
</Window>
